<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f2f3f8"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_time_and_app_name"
        android:layout_width="260dp"
        android:layout_height="600dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="#f2f3f8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_no_content"
        android:elevation="15dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/history_records_content_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/h_img_no_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/history_records_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_records_content_img"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="暂无内容" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/history_content_scroll_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/history_time_and_app_name"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        android:background="@drawable/hirstory_default"
        app:layout_constraintWidth_percent="0.75"
        android:paddingTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_records_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            tools:ignore="ExtraText">
            <ImageView
                android:id="@+id/history_records_title_img"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="60dp"
                android:background="@mipmap/h_study_report_icon"/>
            <TextView
                android:id="@+id/history_study_report_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="学习报告"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@id/history_records_title_img"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/history_report_base"
                android:layout_width="832dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/history_default2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/history_study_report_title"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/history_study_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="学习时长"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/history_study_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="5分钟"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/history_study_time_title"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/history_intercept_msg_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="30dp"
                    android:text="网课助手为您拦截消息"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/history_study_time"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/history_intercept_msg_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="6条"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/history_intercept_msg_title"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/history_speed_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="网课助手为您加速"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="@id/history_study_time_title"
                    app:layout_constraintTop_toBottomOf="@id/history_study_time_title" />

                <TextView
                    android:id="@+id/history_speed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="5B"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/history_speed_time_title"
                    app:layout_constraintTop_toBottomOf="@id/history_study_time" />

                <TextView
                    android:id="@+id/history_prevent_eye_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="120dp"
                    android:text="网课助手守护您眼睛"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/history_study_time"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/history_prevent_eye_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="6分钟"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/history_prevent_eye_title"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="98dp"
                    android:background="@mipmap/study_report_title_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/history_records_title_img2"
                android:layout_width="20dp"
                android:layout_height="21dp"
                app:layout_constraintTop_toBottomOf="@id/history_report_base"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="60dp"
                android:background="@mipmap/h_course_note"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/history_records_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="课堂笔记"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@id/history_records_title_img2"
                app:layout_constraintTop_toBottomOf="@id/history_report_base" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_sound_records"
                android:layout_width="832dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/history_records_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:overScrollMode="never"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_screen_records"
                android:layout_width="832dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/history_sound_records"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:overScrollMode="never"/>
            <TextView
                android:layout_marginTop="55dp"
                android:id="@+id/history_screenshots_time"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="60dp"
                app:layout_constraintTop_toBottomOf="@id/history_screen_records"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="14:00" />
            <TextView
                android:layout_marginTop="55dp"
                android:id="@+id/history_img_screenshots_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/history_screen_records"
                app:layout_constraintLeft_toRightOf="@id/history_screenshots_time"
                android:layout_marginLeft="20dp"
                android:text="【截屏】" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/history_img_screenshots_content_layout"
                android:layout_marginTop="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/history_screen_records">
                <TextView
                    android:id="@+id/history_img_screenshots_edit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/select_default_tv_select"
                    android:textSize="22sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="删除"/>
                <ImageView
                    android:id="@+id/history_img_screenshots_edit"
                    android:layout_width="19dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintRight_toLeftOf="@id/history_img_screenshots_edit_tv"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/select_del_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_img_screenshots"
                android:layout_width="832dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/history_screenshots_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:overScrollMode="never"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/history_ai_test_content"
                app:layout_constraintTop_toBottomOf="@id/history_img_screenshots"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="60dp"
                android:paddingTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="400dp">
                <TextView
                    android:id="@+id/history_tv_test_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="本节课课后诊断"/>
                <TextView
                    android:layout_width="117dp"
                    android:layout_height="41dp"
                    android:id="@+id/history_tv_test_title_2"
                    android:textColor="#3077fa"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/h_test_ai_goto_title"
                    android:text="AI学习"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/history_ai_course_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/history_map_content"
                    app:layout_constraintTop_toBottomOf="@id/history_tv_test_title"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <com.readboy.wanimation.tagcloud.exp.PlanetAtlas.View.MainStarView
                        android:id="@+id/little_starview"
                        android:layout_width="832dp"
                        android:layout_height="277dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="invisible"
                        app:glt_autostart="false"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/history_ai_test_content"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>