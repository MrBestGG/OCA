<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/float_select_content"
        android:background="#CC919395"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/float_select_do_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/fload_window"
            android:layout_width="750dp"
            android:layout_height="888dp"
            android:elevation="10dp">
            <TextView
                android:id="@+id/float_exercises_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="请选择本课的所选章节"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="25dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/float_exercises_class"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/float_exercises_title"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/float_exercises_grade"
                android:layout_width="160dp"
                android:layout_height="680dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/float_exercises_class"
                android:layout_marginLeft="30dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/float_exercises_book"
                android:layout_width="161dp"
                android:layout_height="680dp"
                app:layout_constraintLeft_toRightOf="@id/float_exercises_grade"
                app:layout_constraintTop_toBottomOf="@id/float_exercises_class"
                android:layout_marginLeft="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/float_exercises_point"
                android:layout_width="350dp"
                android:layout_height="680dp"
                app:layout_constraintTop_toBottomOf="@id/float_exercises_class"
                app:layout_constraintLeft_toRightOf="@id/float_exercises_book"
                android:layout_marginLeft="10dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>