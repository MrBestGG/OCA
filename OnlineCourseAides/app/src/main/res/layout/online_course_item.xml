<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="365dp"
    android:layout_height="165dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/online_course_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/online_course_content_img"
            android:layout_width="355dp"
            android:layout_height="147dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="@drawable/ripple_f_main_img_bg" />
        <ImageView
            android:id="@+id/class_more_del_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/select_x_del_img"
            android:elevation="15dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/online_course_title"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"

            android:singleLine="true"
            android:maxLines="1"
            android:maxEms="6"

            android:text="广东教育科技邮箱"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="left" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>