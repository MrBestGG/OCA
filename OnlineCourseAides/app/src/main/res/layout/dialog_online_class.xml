<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="560dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@drawable/shape_default_dialog_thems"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/class_add_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:text="添加网课云"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/class_tab_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网址名称："
        app:layout_constraintTop_toBottomOf="@id/class_add_tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:textSize="22sp"/>
    <EditText
        android:id="@+id/input_area"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="请输入网址名称"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="15"
        android:textSize="20sp"
        android:background="@drawable/input_default"
        app:layout_constraintLeft_toRightOf="@id/class_tab_area"
        app:layout_constraintTop_toBottomOf="@id/class_add_tv_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/class_tab_area2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网址地址："
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/class_tab_area"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:textSize="22sp"/>
    <EditText
        android:id="@+id/input_area2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="https://"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="15"
        android:textSize="20sp"
        android:background="@drawable/input_default"
        app:layout_constraintLeft_toRightOf="@id/class_tab_area2"
        app:layout_constraintTop_toBottomOf="@id/input_area"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/class_btn_cancel"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="取消"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/class_tab_area2" />

    <View
        android:id="@+id/class_dialog_select_line"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:background="#cccccc"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/class_tab_area2"/>

    <TextView
        android:id="@+id/class_btn_make"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="确认"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/class_tab_area2"/>

</androidx.constraintlayout.widget.ConstraintLayout>