<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="151dp"
    android:layout_height="145dp">
    <!--        android:background="@drawable/apps_item_ic"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_item_ic_content"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/apps_item_ic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/app_item_ic"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="@drawable/ripple_default_app_bg"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/app_more_del_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/select_x_del_img"
        android:elevation="15dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/app_more_del_img2"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/img_add_app_is_added"
        android:elevation="15dp"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/app_item_tag"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:background="@mipmap/tree_app_tag"
        app:layout_constraintBottom_toBottomOf="@id/app_item_ic_content"
        app:layout_constraintLeft_toLeftOf="@id/app_item_ic_content"
        app:layout_constraintRight_toRightOf="@id/app_item_ic_content"
        android:elevation="8dp"/>

    <com.readboy.onlinecourseaides.ui.MarqueeTextView
        android:id="@+id/app_item_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:singleLine="true"
        android:maxEms="7"

        android:text="读书郎教育科技邮"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_item_ic_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>